@startuml
class Filter {
    +inProject: Boolean
    +withDueDate: Boolean
    +createdAfter: Date
    +relevance: Int
    +modifiedAfter: Date
}

class Sort {
    +type: SortingType
    +direction: SortingDirection
}

enum SortingType {
    ABC
    RELEVANCE
    CREATED
    DUE
}
enum SortingDirection {
    ASCENDING
    DESCENDING
}

class MainColumn {
    elements: ColumnElem[]
    +sort: Sort
    +filter: Filter

    +addElement(elem: ColumnElem)
    +removeElement(id: Int)
}

MainColumn --* Sort
MainColumn --* Filter

@enduml